generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      String   // "admin" or "owner"

  name      String?
  location  String?
  phone     String?

  books     Book[]
  createdAt DateTime @default(now())
}

model Book {
  id        Int      @id @default(autoincrement())
  title     String              // your validator uses "title"
  author    String?
  quantity  Int
  rentPrice Float?   @map("rent_price")
  status    String   @default("Free") // "Rented" or "Free"

  ownerId   Int
  owner     User     @relation(fields: [ownerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}