{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "types": ["node"]
  },

  "include": ["src/**/*", "*.ts", "*.js","../shared/index.ts"],
  "exclude": ["node_modules"]
}